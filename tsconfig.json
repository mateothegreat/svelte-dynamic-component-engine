{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "runtime-orig.ts"]
}
