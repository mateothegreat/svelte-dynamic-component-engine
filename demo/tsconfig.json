{
  "extends": "./node_modules/@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@mateothegreat/dynamic-component-engine": ["../src/index.ts"],
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$components/*": ["./src/lib/components/ui/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.svelte"],
  "exclude": ["src/lib/components/ui"]
}
